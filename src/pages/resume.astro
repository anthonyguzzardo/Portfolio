---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Resume - Anthony Guzzardo" description="Anthony Guzzardo's resume">
<main class="page-content">
  <div class="container">

    <h1>Resume</h1>

    <p style="margin-bottom: 2rem;">
      <a href="/files/resume.pdf" target="_blank" style="display: inline-block; padding: 0.75rem 1.5rem; background: #fff; color: #000; text-decoration: none; font-weight: 600;">
        Download Resume (PDF)
      </a>
    </p>

    <iframe
      src="/files/resume.pdf"
      style="width: 100%; height: 80vh; border: 1px solid #333;"
      title="Anthony Guzzardo Resume"
    ></iframe>

  </div>
</main>
</Layout>

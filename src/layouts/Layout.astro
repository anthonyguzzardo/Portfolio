---
import '../styles/global.css';
import '../styles/rangley-styles.css';
import Nav from '../components/Nav.astro';
import ThemeBackground from '../components/ThemeBackground.astro';

interface Props {
	title: string;
	description?: string;
}

const { title, description = 'Anthony Guzzardo - Full-stack Developer' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<script is:inline>
			// Load saved theme preference for initial render (prevents flash)
			const savedTheme = localStorage.getItem('portfolio-theme') || 'domain-warping';
			document.documentElement.setAttribute('data-theme', savedTheme);
			// Set dark mode class based on theme (domain-warping is dark)
			document.documentElement.classList.add('dark');
		</script>
	</head>
	<body>
		<ThemeBackground />
		<Nav />

		<slot />
	</body>
</html>